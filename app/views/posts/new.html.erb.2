<h4>Rails form helpers</h4>
<%= form_tag '/posts', method: 'post' do %>
  <%= label_tag :Title, "Title:" %>
  <%= text_field_tag :Title, "Input a title" %> <br/>
  <%= label_tag :Description, "Description:" %>
  <%= text_area_tag :Description, "----" %><br/>
  <%= submit_tag "Creating post", class: "btn btn-primary" %>
<% end %>

<h4>Rails model-backed form helpers</h4>
<% if @post.errors.any? %>
  <div class="alert alert-error">
    <h5>There are some errors.</h5>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :Title, "Title:" %>
  <%= f.text_field :title %><br/>
  <%= f.label :Description, "Description:" %>
  <%= f.text_area :description %><br/>
  <%= f.label :url, "URL:" %>
  <%= f.text_field :url %><br/>
  <%= f.submit 'Creating post', class: "btn btn-primary" %>
<% end %>